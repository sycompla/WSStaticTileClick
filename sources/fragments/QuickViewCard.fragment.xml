<core:FragmentDefinition xmlns="sap.m" xmlns:f="sap.f" xmlns:core="sap.ui.core">

        <QuickViewCard
                id="quickViewCard"
                pages="{/pages}"
                navigate=".onNavigate"
                afterNavigate=".onAfterNavigate">
            <layoutData>
                <f:GridContainerItemLayoutData
                    minRows="2"
                    columns="20">

                </f:GridContainerItemLayoutData>
            </layoutData>
            <QuickViewPage
                    pageId="{pageId}"
                    header="{header}"
                    icon="{icon}"
                    title="{title}"
                    titleUrl="{titleUrl}"
                    description="{description}"
                    groups="{groups}">
                <QuickViewGroup heading="{heading}" elements="{elements}">
                    <QuickViewGroupElement
                            label="{label}"
                            value="{value}"
                            url="{url}"
                            type="{elementType}"
                            pageLinkId="{pageLinkId}"
                            emailSubject="{emailSubject}"
                            target="{target}" />
                </QuickViewGroup>
            </QuickViewPage>
        </QuickViewCard>
</core:FragmentDefinition>